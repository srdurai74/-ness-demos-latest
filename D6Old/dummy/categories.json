    },
    {
        "name": "Out of Scope",
        "matchedStatuses": ["skipped"],
        "messageRegex": ".*NotApplicable.*"
    },
    {
        "name": "Environment Issues",
        "matchedStatuses": ["failed"],
        "messageRegex": ".*TimeoutException.*|.*ConnectionError.*"
    }
]
